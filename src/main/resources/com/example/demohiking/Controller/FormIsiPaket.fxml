<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demohiking.Controller.FormIsiPaketController">

   <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Form Isi Paket" />

   <TextField fx:id="txtAutoID" editable="false" promptText="Auto ID (generated)" />
   <TextField fx:id="txtNamaPaket" promptText="Nama Paket" />
   <TextField fx:id="txtHarga" editable="false" promptText="Harga Paket" />
   <TextField fx:id="txtDiskon" promptText="Diskon (%)" />
   <TextField fx:id="txtJumlahPaket" promptText="Jumlah Paket" />
   <TextArea fx:id="txtDeskripsi" prefRowCount="3" promptText="Deskripsi Paket" />

   <Label text="Produk dalam Paket:" />
   <ListView fx:id="lvProdukPaket" prefHeight="150.0" />

   <HBox alignment="CENTER_RIGHT" spacing="10">
      <Button onAction="#handleSimpanKeDatabase" text="Simpan" />
      <Button onAction="#handleBatal" text="Batal" />
   </HBox>
</VBox>
